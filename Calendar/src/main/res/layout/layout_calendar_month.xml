<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical" >

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/layout_calendar_nav" />

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/layout_calendar_week_days" />

    <LinearLayout
        android:id="@+id/llDaysContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical" >

        <include
            android:id="@+id/rlDayContainer1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/layout_calendar_week" />

        <include
            android:id="@+id/rlDayContainer2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/layout_calendar_week" />

        <include
            android:id="@+id/rlDayContainer3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/layout_calendar_week" />

        <include
            android:id="@+id/rlDayContainer4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/layout_calendar_week" />

        <include
            android:id="@+id/rlDayContainer5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/layout_calendar_week" />

        <include
            android:id="@+id/rlDayContainer6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/layout_calendar_week" />

    </LinearLayout>

<!--     <View -->
